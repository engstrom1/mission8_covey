@{
    ViewData["Title"] = "Quadrants";
}
@model List<TaskResponse>;

<div class="container">
    <h1>Steven Covey's Time Management Matrix</h1>
    <div class="row">
        <div class="col-lg-2 col-sm-12"></div>
        <div class="col-lg-5 col-sm-12">
            <h2>Urgent</h2>
        </div>
        <div class="col-lg-5 col-sm-12">
            <h2>Not Urgent</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2 col-sm-12 vertical-text">
            <h2>Important</h2>
        </div>
        <div class="col-lg-5 col-sm-12">
            <h3>Quadrant 1</h3>
            @foreach (var x in Model)
            {
                if (x.quadrant == 1 & x.completed == false)
                {
                    <p>x.Task  |  x.dueDate</p>
                }
            }
        </div>
        <div class="col-lg-5 col-sm-12">
            <h3>Quadrant 2</h3>
            @foreach (var x in Model)
            {
                if (x.quadrant == 2 & x.completed == false)
                {
                    <p>x.Task  |  x.dueDate</p>
                }
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2 col-sm-12 vertical-text">
            <h2>Not Important</h2>
        </div>
        <div class="col-lg-5 col-sm-12">
            <h3>Quadrant 3</h3>
            @foreach (var x in Model)
            {
                if (x.quadrant == 3 & x.completed == false)
                {
                    <p>x.Task  |  x.dueDate</p>
                }
            }
        </div>
        <div class="col-lg-5 col-sm-12">
            <h3>Quadrant 4</h3>
            @foreach (var x in Model)
            {
                if (x.quadrant == 4 & x.completed == false)
                {
            <p>x.Task  |  x.dueDate</p>
                }
            }
        </div>
    </div>
</div>
